{
  "name": "NCADbook",
  "version": "2.0.0",
  "type": "module",
  "description": "NCAD Equipment Booking System - A mobile-first web application for managing equipment bookings at NCAD College",
  "scripts": {
    "dev": "vite",
    "dev:mock": "VITE_DEMO_MODE=true vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:tablet": "playwright test --project=tablet-chrome --project=tablet-ipad",
    "test:desktop": "playwright test --project=chromium-desktop --project=firefox-desktop --project=webkit-desktop",
    "test:integration": "playwright test tests/integration",
    "test:responsive": "playwright test tests/mobile",
    "test:student": "playwright test tests/integration/student-portal.spec.js",
    "test:staff": "playwright test tests/integration/staff-portal.spec.js",
    "test:admin": "playwright test tests/integration/admin-portal.spec.js",
    "test:master-admin": "playwright test tests/integration/master-admin.spec.js",
    "test:booking-workflow": "playwright test tests/integration/booking-workflow.spec.js",
    "test:email": "playwright test tests/integration/email-notifications.spec.js",
    "test:csv": "playwright test tests/integration/csv-import.spec.js",
    "test:report": "playwright show-report",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\""
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@supabase/supabase-js": "^2.38.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.8.0",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-a11y": "^7.6.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.0",
    "msw": "^2.0.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "equipment",
    "booking",
    "ncad",
    "college",
    "react",
    "vite"
  ],
  "author": "NCAD",
  "license": "ISC"
}
